<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.NotesListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/notes_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/toolbar_title"
        app:titleTextColor="@color/grey_violet_600"
        android:background="@color/light_violet_50"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notes_list_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/recycle_item_note_layout"/>

</LinearLayout>